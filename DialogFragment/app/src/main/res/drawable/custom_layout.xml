<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="@color/cardview_shadow_start_color" /> <!-- Shadow color -->
            <corners android:radius="12dp" /> <!-- Rounded corners for shadow -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" /> <!-- Padding to offset shadow -->
        </shape>
    </item>

    <!-- Actual Card layer -->
    <item>
        <shape>
            <solid android:color="#00D4FF" /> <!-- Card color (white or any other) -->
            <corners android:radius="12dp" /> <!-- Rounded corners for the card -->
        </shape>
    </item>
</layer-list>
